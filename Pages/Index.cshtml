@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main>
    <div>
        <div class="box"></div>
    </div>
    <div class="control">
        <h2>Control Panel</h2>
        <div class="inputs">
            <div>
                <label for="red">Red</label><br>
                <input type="text" id="red" value="00" maxlength="2">
            </div>
            <div>
                <label for="red_incr">Increment Value</label><br>
                <input type="number" id="red_incr" value="1">
            </div>
        </div>
        <div class="inputs">
            <div>
                <label for="green">Green</label><br>
                <input type="text" id="green" value="00" maxlength="2">
            </div>
            <div>
                <label for="green_incr">Increment Value</label><br>
                <input type="number" id="green_incr" value="1">
            </div>
        </div>
        <div class="inputs">
            <div>
                <label for="blue">Blue</label><br>
                <input type="text" id="blue" value="00" maxlength="2">
            </div>
            <div>
                <label for="blue_incr">Increment Value</label><br>
                <input type="number" id="blue_incr" value="1">
            </div>
        </div>
        <hr>
        <div class="inputs">
            <div>
                <label for="color">Color</label><br>
                <input type="text" id="color" value="#ffffff" readonly>
            </div>
            <div>
                <label for="interval">Interval (in ms)</label><br>
                <input type="number" id="interval" value="250">
            </div>
        </div>
        <div>
            <button id="button">Start</button>
        </div>
    </div>
</main>
